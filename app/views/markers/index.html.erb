<h1>Listing markers</h1>

<table>
  <thead>
    <tr>
      <th>Marker type</th>
      <th>Marker content</th>
      <th>Marker address</th>
      <th>Start date</th>
      <th>End date</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @markers.each do |marker| %>
      <tr>
        <td><%= marker.marker_type %></td>
        <td><%= marker.marker_content %></td>
        <td><%= marker.marker_address %></td>
        <td><%= marker.start_date %></td>
        <td><%= marker.end_date %></td>
        <td><%= link_to 'Show', marker %></td>
        <td><%= link_to 'Edit', edit_marker_path(marker) %></td>
        <td><%= link_to 'Destroy', marker, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

